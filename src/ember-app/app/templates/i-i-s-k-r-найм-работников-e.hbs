<h3 class="ui header">{{t "forms.i-i-s-k-r-найм-работников-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-найм-работников-e.датаНайма-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаНайма
      class=(if (v-get validationModel "датаНайма" "isInvalid") "error")
      data-test-i-i-s-k-r-найм-работников-e-датаНайма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаНайма" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iDработника
      class=(if (v-get validationModel "iDработника" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-найм-работников-e.iDработника-caption")
      data-test-i-i-s-k-r-найм-работников-e-iDработника=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iDработника" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фамилия
      class=(if (v-get validationModel "фамилия" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-найм-работников-e.фамилия-caption")
      data-test-i-i-s-k-r-найм-работников-e-фамилия=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фамилия" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.имя
      class=(if (v-get validationModel "имя" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-найм-работников-e.имя-caption")
      data-test-i-i-s-k-r-найм-работников-e-имя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "имя" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.отчество
      class=(if (v-get validationModel "отчество" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-найм-работников-e.отчество-caption")
      data-test-i-i-s-k-r-найм-работников-e-отчество=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отчество" "message")}}
  </div>
  <div class="field" data-test-i-i-s-k-r-найм-работников-e-образование="true">
    <label>{{t "forms.i-i-s-k-r-найм-работников-e.образование-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-k-r-вид-образование")
      value=model.образование
      class=(if (v-get validationModel "образование" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "образование" "message")}}
  </div>
  <div class="field" data-test-i-i-s-k-r-найм-работников-e-опытРаботы="true">
    <label>{{t "forms.i-i-s-k-r-найм-работников-e.опытРаботы-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-k-r-опыт")
      value=model.опытРаботы
      class=(if (v-get validationModel "опытРаботы" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "опытРаботы" "message")}}
  </div>
  <div class="field" data-test-i-i-s-k-r-найм-работников-e-договор="true">
    <label>{{t "forms.i-i-s-k-r-найм-работников-e.договор-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-k-r-вид-договора")
      value=model.договор
      class=(if (v-get validationModel "договор" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "договор" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-найм-работников-e.вакансии-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.вакансии
      displayAttributeName="наименование"
      autocomplete=true
      relationName="вакансии"
      projection="ВакансииL"
      title=(t "forms.i-i-s-k-r-найм-работников-e.вакансии-caption")
      readonly=readonly
      componentName="вакансииLookup"
      class=(if (v-get validationModel "вакансии" "isInvalid") "error")
      data-test-i-i-s-k-r-найм-работников-e-вакансии=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "вакансии" "message")}}
  </div>
</form>
