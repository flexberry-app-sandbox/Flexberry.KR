<h3 class="ui header">{{t "forms.i-i-s-k-r-график-работы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-график-работы-e.датаСоздания-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаСоздания
      class=(if (v-get validationModel "датаСоздания" "isInvalid") "error")
      data-test-i-i-s-k-r-график-работы-e-датаСоздания=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаСоздания" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-график-работы-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-k-r-график-работы-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-k-r-график-работы-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сотрудники.должность
      class=(if (v-get validationModel.сотрудники "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-график-работы-e.сотрудники.должность-caption")
      data-test-i-i-s-k-r-график-работы-e-сотрудники-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сотрудники "должность" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-график-работы-e.график-caption"}}</label>
    {{flexberry-groupedit
      componentName="графикGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.график
      content=model.график
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "график" "isInvalid") "error")
      data-test-i-i-s-k-r-график-работы-e-график=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "график" "message")}}
  </div>
</form>
